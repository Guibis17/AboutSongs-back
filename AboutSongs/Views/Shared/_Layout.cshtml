<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AboutSongs | @ViewData["Title"]</title>
    <link rel="icon" href="~/Assets/Images/favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- Fundo -->
    <div class="stars"></div>
    <div class="stars2"></div>

    <!-- Cabeçalho -->
    <header class="cabecalho">
        <!-- Conteúdo principal do cabeçalho -->
        <a asp-action="Index" asp-controller="Home"><img class="h-logo" src="~/img/logo-home.png"
                alt="Logo do site"></a>
        <nav class="nav-bar">
            <ul>
                <li><a asp-action="Musicas">Músicas</a></li>
                <li><a asp-action="Albuns" asp-controller="Home">Álbuns</a></li>
                <li><a asp-action="Sobre" asp-controller="Home">Sobre</a></li>
            </ul>
        </nav>

        <partial name="_LoginPartial"></partial>
    </header>

    <!-- Página -->
    <main class="page">

        @RenderBody()

    </main>

    <!-- Botão de voltar ao topo -->
    <button id="topButton" onclick="scrollToTop()"><i class="fa-solid fa-angle-up"></i></button>

    <!-- Link JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/top-btn.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
